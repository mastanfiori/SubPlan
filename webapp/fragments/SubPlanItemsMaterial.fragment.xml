<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:richTextEditor="sap.ui.richtexteditor">
	<Dialog title="{i18n>SubPlanMaterial}" contentWidth="40%" contentHeight="60%">
		<content>
			<TextArea id="spMat" name="{i18n>Material}" value="{subplanMaterialData>/}" rows="20" cols="50"
				class="sapUiSmallMargin"></TextArea>
		</content>
		<beginButton>
			<Button text="{i18n>Ok}" press="onSubPlanNewMaterialsCopy"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>Cancel}" press="onDisplayDialogCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>